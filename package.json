{
  "name": "ai-chatbots",
  "version": "1.0.0",
  "description": "Production-ready multi-platform AI chatbot powered by Perplexity API - Telegram & WhatsApp",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "docker:build": "docker build -t ai-chatbots .",
    "docker:run": "docker run -d --env-file .env ai-chatbots"
  },
  "keywords": [
    "chatbot",
    "telegram",
    "whatsapp",
    "perplexity",
    "ai",
    "sonar"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "node-telegram-bot-api": "^0.64.0",
    "qrcode-terminal": "^0.12.0",
    "rate-limiter-flexible": "^4.0.1",
    "uuid": "^9.0.1",
    "whatsapp-web.js": "^1.23.0",
    "winston": "^3.11.0",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.27",
    "@types/node-telegram-bot-api": "^0.64.3",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/uuid": "^9.0.7",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
